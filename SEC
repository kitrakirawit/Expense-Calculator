<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Student Expense Tracker</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      max-width: 600px;
      margin: auto;
      padding: 20px;
      background-color: #f5f5f5;
    }

    h1 {
      text-align: center;
      color: #333;
    }

    input, select, button {
      padding: 10px;
      margin: 8px 0;
      width: 100%;
      box-sizing: border-box;
    }

    .income, .expense {
      background-color: #fff;
      padding: 15px;
      margin-bottom: 20px;
      border-radius: 10px;
      box-shadow: 0 0 5px rgba(0,0,0,0.1);
    }

    ul {
      list-style-type: none;
      padding: 0;
    }

    li {
      background-color: #e0e0e0;
      margin: 5px 0;
      padding: 10px;
      border-radius: 5px;
    }

    .balance {
      font-weight: bold;
      font-size: 1.2em;
      text-align: center;
      margin-top: 20px;
    }
  </style>
</head>
<body>

  <h1>Student Expense Tracker</h1>

  <div class="income">
    <h2>Add Income</h2>
    <input id="incomeSource" placeholder="Source (e.g. Part-time job)">
    <input id="incomeAmount" type="number" placeholder="Amount">
    <button onclick="addIncome()">Add Income</button>
    <ul id="incomeList"></ul>
  </div>

  <div class="expense">
    <h2>Add Expense</h2>
    <input id="expenseName" placeholder="Expense (e.g. Rent)">
    <input id="expenseAmount" type="number" placeholder="Amount">
    <select id="expenseCategory">
      <option value="Food">Food</option>
      <option value="Rent">Rent</option>
      <option value="School">School</option>
      <option value="Transport">Transport</option>
      <option value="Other">Other</option>
    </select>
    <button onclick="addExpense()">Add Expense</button>
    <ul id="expenseList"></ul>
  </div>

  <div class="balance" id="balanceDisplay">
    Total Balance: $0
  </div>

  <script>
    let totalIncome = 0;
    let totalExpense = 0;

    function addIncome() {
      const source = document.getElementById("incomeSource").value;
      const amount = parseFloat(document.getElementById("incomeAmount").value);
      if (source && amount > 0) {
        const listItem = document.createElement("li");
        listItem.textContent = `${source}: +$${amount}`;
        document.getElementById("incomeList").appendChild(listItem);
        totalIncome += amount;
        updateBalance();
        document.getElementById("incomeSource").value = "";
        document.getElementById("incomeAmount").value = "";
      }
    }

    function addExpense() {
      const name = document.getElementById("expenseName").value;
      const amount = parseFloat(document.getElementById("expenseAmount").value);
      const category = document.getElementById("expenseCategory").value;
      if (name && amount > 0) {
        const listItem = document.createElement("li");
        listItem.textContent = `${name} (${category}): -$${amount}`;
        document.getElementById("expenseList").appendChild(listItem);
        totalExpense += amount;
        updateBalance();
        document.getElementById("expenseName").value = "";
        document.getElementById("expenseAmount").value = "";
      }
    }

    function updateBalance() {
      const balance = totalIncome - totalExpense;
      const display = document.getElementById("balanceDisplay");
      display.textContent = `Total Balance: $${balance.toFixed(2)}`;
    }
  </script>

</body>
</html>
